<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.infopass.mapper.BlankQuizMapper">
	<select id="selectQuizList" resultType="boot.infopass.dto.BlankQuizDto"> select
		id,question,answer,category,created_at from blank_question order by rand() limit 10 </select>

	<insert id="insertSubmission"> insert into
		blank_quiz_submission(user_id,quiz_id,submitted_answer,is_correct,created_at)values(#{user_id},
		#{quiz_id},#{submitted_answer},#{is_correct},now()) </insert>

	<insert id="insertWrongAnswer"> insert into
		wrong_answers(user_id,quiz_id,submitted_answer,correct_answer,created_at)values(#{user_id},#{quiz_id},
		#{submitted_answer},#{correct_answer},now()) </insert>

	<insert id="insertUserStatus"> insert into
		blank_game_status(user_id,user_score,remain_time,created_at)values(#{user_id},#{user_score},#{remain_time},now())
		</insert>
</mapper>